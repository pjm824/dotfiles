        diff = auto
        status = auto
        branch = auto
        ui = true
[core]
	excludesfile = /Users/paul/.gitignore_global
        editor = vim
[apply]
        whitespace = nowarn
[mergetool]
        keepBackup = false
[difftool]
        prompt = false
[help]
        autocorrect = 1
